<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="Base" />

	<style name="Base.Component">
		<item name="android:layout_marginTop">@dimen/spacing_small</item>
		<item name="android:layout_marginBottom">@dimen/spacing_small</item>
	</style>
	<style name="Component" parent="Base.Component"/>

	<style name="Base.Component.Container">
		<item name="android:background">@color/surface</item>
		<item name="android:padding">@dimen/spacing_small</item>
	</style>

	<style name="Base.Component.Container.Content">
		<item name="android:layout_marginTop">0dp</item>
		<item name="android:layout_marginBottom">0dp</item>
	</style>

	<style name="Component.Container.ListItem" parent="Base.Component.Container">
		<item name="android:layout_margin">@dimen/spacing_small</item>
	</style>

	<style name="Component.Container.Content" parent="Base.Component.Container.Content"/>

	<style name="Component.Toolbar" parent="Widget.AppCompat.Toolbar">
		<item name="android:background">?attr/colorPrimary</item>
		<item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
	</style>

	<style name="Component.Label">
		<item name="android:textAppearance">@style/TextAppearance.Subtitle1</item>
	</style>

	<style name="Component.Theme1.PlainText" parent="Component">
		<item name="android:textAppearance">@style/TextAppearance.Body1</item>
	</style>

	<style name="Component.Theme2.PlainText" parent="Component">
		<item name="android:textAppearance">@style/TextAppearance.Body2</item>
	</style>

	<style name="Component.Theme1.Custom" parent="Base.Component">
		<item name="android:textAppearance">@style/TextAppearance.Headline5</item>
	</style>

	<style name="Component.Theme2.Custom" parent="Base.Component">
		<item name="android:textAppearance">@style/TextAppearance.Headline6</item>
	</style>

</resources>