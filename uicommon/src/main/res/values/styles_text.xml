<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="Base" />

	<style name="Base.TextAppearance" parent="TextAppearance.AppCompat.Subhead">
		<item name="fontFamily">@string/font_roboto_regular</item>
		<item name="android:textColor">?android:textColorPrimary</item>
		<item name="android:textStyle">normal</item>
		<item name="textAllCaps">false</item>
	</style>

	<style name="Base.TextAppearance.Headline1">
		<item name="fontFamily">@string/font_roboto_light</item>
		<item name="android:textSize">96sp</item>
	</style>

	<style name="Base.TextAppearance.Headline2">
		<item name="fontFamily">@string/font_roboto_light</item>
		<item name="android:textSize">60sp</item>
	</style>

	<style name="Base.TextAppearance.Headline4">
		<item name="android:textSize">34sp</item>
	</style>

	<style name="Base.TextAppearance.Headline6">
		<item name="fontFamily">@string/font_roboto_medium</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">18sp</item>
	</style>

	<style name="Base.TextAppearance.Subtitle1">
		<item name="android:textSize">16sp</item>
	</style>

	<style name="Base.TextAppearance.Subtitle2">
		<item name="fontFamily">@string/font_roboto_medium</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">14sp</item>
	</style>

	<style name="Base.TextAppearance.Body1">
		<item name="android:textSize">16sp</item>
	</style>

	<style name="Base.TextAppearance.Body2">
		<item name="android:textSize">14sp</item>
	</style>

	<style name="Base.TextAppearance.Button">
		<item name="fontFamily">@string/font_roboto_medium</item>
		<item name="android:textStyle">bold</item>
		<item name="textAllCaps">true</item>
		<item name="android:textSize">14sp</item>
	</style>

	<style name="Base.TextAppearance.Caption">
		<item name="android:textSize">12sp</item>
	</style>

	<style name="Base.TextAppearance.Overline">
		<item name="fontFamily">@string/font_roboto_medium</item>
		<item name="android:textStyle">bold</item>
		<item name="textAllCaps">true</item>
		<item name="android:textSize">10sp</item>
	</style>

	<style name="TextAppearance" parent="Base.TextAppearance"/>
	<style name="TextAppearance.Headline1" parent="Base.TextAppearance.Headline1"/>
	<style name="TextAppearance.Headline2" parent="Base.TextAppearance.Headline2"/>

	<style name="TextAppearance.Headline3">
		<item name="android:textSize">48sp</item>
	</style>

	<style name="TextAppearance.Headline4" parent="Base.TextAppearance.Headline4"/>

	<style name="TextAppearance.Headline5">
		<item name="android:textSize">24sp</item>
	</style>

	<style name="TextAppearance.Headline6" parent="Base.TextAppearance.Headline6"/>
	<style name="TextAppearance.Subtitle1" parent="Base.TextAppearance.Subtitle1"/>
	<style name="TextAppearance.Subtitle2" parent="Base.TextAppearance.Subtitle2"/>
	<style name="TextAppearance.Body1" parent="Base.TextAppearance.Body2"/>
	<style name="TextAppearance.Body2" parent="Base.TextAppearance.Body1"/>
	<style name="TextAppearance.Button" parent="Base.TextAppearance.Button"/>
	<style name="TextAppearance.Button.Colored">
		<item name="android:textColor">?android:colorPrimary</item>
	</style>
	<style name="TextAppearance.Button.Inverse">
		<item name="android:textColor">?android:textColorSecondary</item>
	</style>
	<style name="TextAppearance.Caption" parent="Base.TextAppearance.Caption"/>
	<style name="TextAppearance.Overline" parent="Base.TextAppearance.Overline"/>
</resources>